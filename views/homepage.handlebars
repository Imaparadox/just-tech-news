<ol class="post-list">
    {{#each posts as |posts|}}
    <li>
        <article class="post">
            <div class="title">
                <a href="{{post_url}}" target="blank">{{title}}</a>
                <span>({{post.post_url}})</span>
            </div>
            <div class="meta">
                {{post.vote_count}} point(s) by {{post.user.username}} on
                {{post.created_at}}
                |
                <a href="/post/{{post.id}}">{{comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>